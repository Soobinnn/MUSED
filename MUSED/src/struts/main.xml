<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
<!-- 용량제한 100MB 로 설정. -->
<constant name="struts.multipart.maxSize" value="104857600" />
<package name="main" extends="struts-default, tiles-default">
	<action name="main" class="main.MainAction">
		<result type="tiles">main</result>
	</action>
	
	<action name="mainSearch" class="main.mainSearchAction">
			<result type="tiles">main_search</result>
	</action>

</package>
</struts>
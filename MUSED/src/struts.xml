			<result>/talent/ListForm.jsp</result>
		</action>
		
		<!-- 재능 등록 폼 -->
		<action name="talentWriteForm" class="talent.WriteAction" method="form">
			<result>/talent/WriteForm.jsp</result>
		</action>
		<!-- 재능 등록 처리 -->
		<action name="talentWrite" class="talent.WriteAction">
			<result>/talent/WriteSuccessForm.jsp</result>
